package pruebas;
import clases.Libro;

/**
 * Clase de prueba para demostrar cómo funciona la clase Libro.
 */
public class PruebaLibro {

    public static void main(String[] args) {
            System.out.println("Libros creados (antes): " + Libro.obtenerContadorLibros());

            // Creación de objetos (instancias de la clase Libro)
            Libro libro1 = new Libro("Cien años de soledad", "Gabriel García Márquez", "978-0307474728", 1967, 49.90);
            Libro libro2 = new Libro("La ciudad y los perros", "Mario Vargas Llosa", "978-8420437487", 2001, 120.50);
            Libro libro3 = new Libro("Rayuela", "Julio Cortázar", "978-8420471832", 2005, 12.59);

             // Uso de métodos encapsulados para obtener información
            System.out.println("Libro 1 -> " + libro1.obtenerInformacion());
            System.out.println("Libro 2 -> " + libro2.obtenerInformacion());
            System.out.println("Libro 3 -> " + libro3.obtenerInformacion());
            System.out.println("El autor del Libro 1 es: " + libro1.getAutor());
            System.out.println("El autor del Libro 2 es: " + libro2.getAutor());
            System.out.println("El autor del Libro 3 es: " + libro3.getAutor());
            
            //Acceso correcto usando getter
            System.out.println("Autor (getter): " + libro1.getAutor());
            //Acceso directo a atributo privado (NO COMPILA)
            // System.out.println("Autor (acceso directo): " + libro1.autor);
            //Atributo público: se puede modificar directamente
            libro1.anioPublicacion = 2000; // NO encapsulado
            System.out.println("Año modificado directamente: " + libro1.anioPublicacion);
            
            //Modificando precio mediante setter (con validación)
            libro1.setPrecio(55.00);  // válido
            libro1.setPrecio(-10.00); // rechazado (mensaje de error)
            System.out.println("Precio actualizado (getter): " + libro1.getPrecio());
        
             // Después de crear 3 libros, el contador debe estar en 3
            System.out.println("Libros creados (después): " + Libro.obtenerContadorLibros());
    }    
}
